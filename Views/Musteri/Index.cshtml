@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <div class="search-container">
        <label for="search-input">Aranacak Müşteri Ad</label>
        <input type="text" id="search-input" name="p" placeholder="Müşteri Adı" />
        <button type="submit" class="search-button">Ara</button>
    </div>



    @*<b> Aranacak Müşteri Ad @Html.TextBox("p") </b>
        <input type="submit" value="Ara" />*@




}

<table class="table table-bordered">
    <tr style="background-color:lightpink">
        <th>MUSTERIID</th>
        <th>MUSTERIAD</th>
        <th>MUSTERISOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    <tbody>
        @foreach (var mst in Model)
        {
            <tr style="background-color:antiquewhite">
                <td>@mst.MUSTERIID</td>
                <td>@mst.MUSTERIAD</td>
                <td>@mst.MUSTERISOYAD</td>
                <td><a href="/Musteri/SIL/@mst.MUSTERIID" class="btn btn-danger">SİL </a></td>
                <td> <a href="/Musteri/MusteriGetir/@mst.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>

            </tr>
        }

    </tbody>


</table>
<a href="/Musteri/YeniMusteri " class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
